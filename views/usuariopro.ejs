<%- include('templates/header', {titulo: "Pagina Usuario Pro"}) %>
<body>
    
    <%- include('templates/menu') %>

    <div class="w-app" style="background-color:rgb(240, 242, 154)">
        <div class="container">
            <div class="row">
            <aside class="col-md-4">
